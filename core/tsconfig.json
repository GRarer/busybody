{
    "compilerOptions": {
      "module": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "removeComments": true,
      "target": "ES2016",
      "rootDir": "./src/",
      "strict": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "newLine": "LF",
      "declaration": true,
      "declarationDir": "./dist/types",
    },
    "lib": ["es2015"]
  }
